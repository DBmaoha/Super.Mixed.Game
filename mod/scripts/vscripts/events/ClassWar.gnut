void function ClassWarLoadoutSettingsThink()
{
    svGlobal.levelEnt.EndSignal( "GameStateChanged" )

    bool firstLoadout = true
    while( GetGameState() == eGameState.Playing )
    {
        entity chosenPilot
        if( firstLoadout ) // first choose, won't have same players
            chosenPilot = GetPlayerArray()[RandomInt(GetPlayerArray().len())]
        else
        {
            string lastPilotName = file.storedPilotName
            chosenPilot = GetPlayerArray()[RandomInt(GetPlayerArray().len())]
            while( chosenPilot.GetPlayerName() == lastPilotName ) // avoid choose twice!
                chosenPilot = GetPlayerArray()[RandomInt(GetPlayerArray().len())] // choose a new one
        }
        file.StoredPilotLoadout = GetActivePilotLoadout( chosenPilot )
        file.storedPilotName = chosenPilot.GetPlayerName()
        file.storedPlayerSettings = chosenPilot.GetPlayerSettings()
        if( !firstLoadout )
        {
            foreach( entity player in GetPlayerArray() )
                NSSendLargeMessageToPlayer( player, "配裝已更新! ", "現在起重生后將使用 " + file.storedPilotName + " 的配裝", 10, "rui/callsigns/callsign_69_col" )
        }
        else // first loadout, replace all player's loadouts
        {
            foreach( entity player in GetPlayerArray() )
                OnPlayerRespawn( player )
        }
        firstLoadout = false

        wait 120 // every 2min change loadout
    }
}
